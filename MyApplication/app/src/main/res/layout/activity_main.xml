<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:background="@color/colorPrimaryDark"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.adwitiyasingh.myapplication.MainActivity">


    <Button
        android:text="÷"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:textColor="@android:color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnDiv"
        android:layout_alignBaseline="@+id/btnMul"
        android:layout_alignBottom="@+id/btnMul"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="+"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:textColor="@android:color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnAdd"
        android:layout_marginBottom="28dp"
        android:layout_above="@+id/btnDiv"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="-"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:textColor="@android:color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnSub"
        android:layout_alignTop="@+id/btnAdd"
        android:layout_alignParentStart="true" />

    <Button
        android:text="!"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:textColor="@android:color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/btnMul"
        android:layout_centerHorizontal="true"
        android:id="@+id/btnFact" />

    <Button
        android:text="Mem+"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/btnAns"
        android:layout_alignParentEnd="true"
        android:id="@+id/btnmem" />

    <Button
        android:text="√ / x²"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnRtSqr"
        android:layout_alignBaseline="@+id/btnSub"
        android:layout_alignBottom="@+id/btnSub"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="+/-"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:textColor="@android:color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnneg"
        android:layout_alignBaseline="@+id/btnprcnt"
        android:layout_alignBottom="@+id/btnprcnt"
        android:layout_alignParentEnd="true" />


    <Button
        android:text="%"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:textColor="@android:color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="13dp"
        android:id="@+id/btnprcnt"
        android:layout_above="@+id/btnSub"
        android:layout_alignEnd="@+id/btnMul" />

    <Button
        android:text="Mem-"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnmemmin"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="16dp" />

    <Button
        android:text="Ans"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnAns"
        android:layout_alignBaseline="@+id/btnmemmin"
        android:layout_alignBottom="@+id/btnmemmin"
        android:layout_alignStart="@+id/btnFact" />

    <Button
        android:text="x"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnMul"
        android:layout_marginBottom="15dp"
        android:layout_above="@+id/btnAns"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/etNum1"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/etNum2"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/etNum1"
        android:layout_alignStart="@+id/etNum1" />

    <TextView
        android:text="Result."
        android:textColor="@android:color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvResult"
        android:layout_marginTop="41dp"
        android:layout_below="@+id/etNum2"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="C"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:textColor="@android:color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnclr"
        android:layout_alignBaseline="@+id/btnneg"
        android:layout_alignBottom="@+id/btnneg"
        android:layout_alignStart="@+id/btnRtSqr" />

    <Button
        android:text="x^y"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnxpowy"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/tvResult"
        android:layout_alignStart="@+id/btnclr" />

    <Button
        android:text="e"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btne"
        android:layout_alignBaseline="@+id/btnxpowy"
        android:layout_alignBottom="@+id/btnxpowy"
        android:layout_alignParentStart="true" />

    <Button
        android:text="π"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnpi"
        android:layout_alignBaseline="@+id/btnxpowy"
        android:layout_alignBottom="@+id/btnxpowy"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
